#!/usr/bin/perl
# vim:ft=perl:
# abstract: set terminal background

my @c = qw(
100020 001714 0d0020 001717 00170b 170013 00170b 0d0020 000419 001620
001420 000c20 000920 161703 001021 001713 000020 091703 170014 170d03
030218 170905 000000 010101 020202 030303 040404 050505 060606 070707
080808 090909 0a0a0a 0b0b0b 0c0c0c 0d0d0d 0e0e0e 0f0f0f 101010 111111
121212 131313 141414 151515 161616 171717 181818 191919 1a1a1a 1b1b1b
1c1c1c 1d1d1d 1e1e1e 1f1f1f 202020 212121 222222 232323 242424 252525
262626 272727 282828 292929 2a2a2a 2b2b2b 2c2c2c 2d2d2d 2e2e2e 2f2f2f
);

bg();
sub bg {
  my $background = $_[0] || $c[int(rand(scalar(@c)))];
  warn "$background\n";
  print "\e]11;#$background\a";
  print "\e]10;#ffffff\a";
}

